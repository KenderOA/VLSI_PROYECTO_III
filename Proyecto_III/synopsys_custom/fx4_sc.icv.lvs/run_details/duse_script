mv /mnt/vol_NFS_rh003/Est_VLSI_II_2024/kortiz/Proyecto_III/synopsys_custom/fx4_sc.icv.lvs/run_details/group/duse_group.tmp /mnt/vol_NFS_rh003/Est_VLSI_II_2024/kortiz/Proyecto_III/synopsys_custom/fx4_sc.icv.lvs/run_details/group/duse_group
pathsize=`/usr/bin/du -s --block-size=1 /mnt/vol_NFS_rh003/Est_VLSI_II_2024/kortiz/Proyecto_III/synopsys_custom/fx4_sc.icv.lvs/fx4_sc.TOP_LAYOUT_ERRORS | awk '{print $1}'`
total=$(($total+$pathsize))
pathsize=`/usr/bin/du -s --block-size=1 /mnt/vol_NFS_rh003/Est_VLSI_II_2024/kortiz/Proyecto_III/synopsys_custom/fx4_sc.icv.lvs/pydb | awk '{print $1}'`
total=$(($total+$pathsize))
echo $total > /mnt/vol_NFS_rh003/Est_VLSI_II_2024/kortiz/Proyecto_III/synopsys_custom/fx4_sc.icv.lvs/run_details/duse_manager_res.tmp && \
mv /mnt/vol_NFS_rh003/Est_VLSI_II_2024/kortiz/Proyecto_III/synopsys_custom/fx4_sc.icv.lvs/run_details/duse_manager_res.tmp /mnt/vol_NFS_rh003/Est_VLSI_II_2024/kortiz/Proyecto_III/synopsys_custom/fx4_sc.icv.lvs/run_details/duse_manager_res
